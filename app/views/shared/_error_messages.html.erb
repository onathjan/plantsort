<% if object.errors.any? %>
  <div class="alert-message notification has-text-white has-text-weight-semibold">
    <p>This form contains <%= pluralize(object.errors.count, "error") %>:</p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>- <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>