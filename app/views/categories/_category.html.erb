<div class="card" style="max-width:400px;">
    <div class="content">
      <p class="title has-text-weight-normal is-3"><%= "#{category.name}" %></p>
       <div class="actions">
          <%= link_to "Edit", edit_category_path(category), class: "button is-green has-text-white has-text-weight-semibold", data: { turbo: "false" } %>
          <%= link_to "Delete", category_path(category), data: { "turbo-method": :delete, turbo_confirm: "Are you sure you want to delete this category?" }, class: "button is-red has-text-white has-text-weight-semibold" %>
        </div>
      </div>
    </div>
  </div>
</div>