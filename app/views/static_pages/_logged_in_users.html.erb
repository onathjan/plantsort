<section class="section">
  <div class="container mb-6">
    <p class="is-size-2 block">All Plants (<%= @plants.count %>)</p>
    <% @plants.each do |plant| %>
      <div class="card" style="max-width:400px;">
        <div class="card-content">
          <div class="media is-flex is-flex-direction-row is-align-items-center">
            <div class="media-content">
              <p class="title has-text-weight-normal is-3"><%= "#{plant.common_name}" %></p>
            </div>
          </div>
          <div class="content">
            <div class="mb-2">
              <p class= "is-size-4"><%= plant.taxonomic_name %></p>
            </div>
            <div class="actions">
              <%= link_to "Edit Plant", edit_plant_path(plant), class: "button is-green has-text-white has-text-weight-semibold", data: { turbo: "false" } %>
              <%= link_to "Delete Plant", plant_path(plant), data: { "turbo-method": :delete,
                  turbo_confirm: "Are you sure you want to delete this plant?" }, 
                  class: "button is-red has-text-white has-text-weight-semibold" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>